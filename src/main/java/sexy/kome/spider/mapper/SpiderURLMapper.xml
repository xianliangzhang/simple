<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="sexy.kome.spider.mapper.SpiderURLMapper">
    <resultMap id="SpiderURLMap" type="sexy.kome.spider.model.SpiderURL">
        <id property="id" column="id"/>
        <result property="url" column="url"/>
        <result property="fromDocUrl" column="from_doc_url"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="lookupBySimple" parameterType="sexy.kome.spider.model.SpiderURL" resultMap="SpiderURLMap">
        select * from spider_url
        <where>
            <if test="id != null">and id = #{id}</if>
            <if test="url != null">and url = #{url}</if>
            <if test="status != null">and status = #{status}</if>
            <if test="fromDocUrl != null">and from_doc_url = #{fromDocUrl}</if>
        </where>
    </select>

    <insert id="save" parameterType="sexy.kome.spider.model.SpiderURL" useGeneratedKeys="true" keyProperty="id">
        insert into spider_url(url, from_doc_url, status, create_time) values (#{url}, #{fromDocUrl}, 'unvisited', now())
    </insert>

    <update id="updateStatus" parameterType="sexy.kome.spider.model.SpiderURL">
        update spider_url set status = #{status}, update_time = now() where id = #{id}
    </update>
</mapper>